<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Eccoshop</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <%- include('./block/style2.ejs') %>
        <style>
            a:hover {
                text-decoration: none;
            }
        </style>
</head>

<body>
    <%- include('./block/header.ejs') %>
        <!-- Page Header Start -->
        <div class="hero-wrap hero-bread" style="background-image: url('/asset5/images/bg_6.jpg');">
            <div class="container">
              <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span></p>
                  <h1 class="mb-0 bread">Danh Mục</h1>
                </div>
              </div>
            </div>
          </div>
        <!-- Page Header End -->
        <div style="margin-bottom: 100px;margin-top: 40px;" class="container">
            <div class="row">
                <div class="col-md-3">
                    <!-- Sidebar danh mục sản phẩm -->
                    <h5 style="font-family: sans-serif;">Danh Mục Sản Phẩm</h5>
                    <div class="sidebar">
                        <% categories.forEach(function(item){ %>
                            <ul class="list-group">
                                <li class="list-group-item"><a style="color: black;" href="/categories/<%= item.id %>">
                                        <%= item.name %>
                                    </a></li>
                            </ul>
                            <% }); %>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="container">
                        <div class="row">
                      <% products.forEach(function(item){ %>
                            <div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
                                <div class="product d-flex flex-column">
                                    <a href="" class="img-prod"><img class="img-fluid" src="<%= item.image %>" alt="Colorlib Template">
                                        <div class="overlay"></div>
                                    </a>
                                    <div class="text py-3 pb-4 px-3">
                                        <h3><a href="/detail/<%= item.id %>"><%= item.name %></a></h3>
                                        <div class="pricing">
                                            <p class="price"><span><% item.price=item.price.toLocaleString('vi-VN') %>
                                <%= item.price %> đ</span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                      <% }) %>
                        </div>
                    </div>
                    <div class="container">
                        <ul class="pagination pagination-lg">
                            <% for (let i=1; i <=total_page; i++) { %>
                                <% if (i===current_page) { %>
                                    <li class="page-item active"><a class="page-link"
                                            href="/categories/<%= category_id %>?page=<%= i %>">
                                            <%= i %>
                                        </a></li>
                                    <% } else { %>
                                        <li class="page-item"><a class="page-link"
                                                href="/categories/<%= category_id %>?page=<%= i %>">
                                                <%= i %>
                                            </a></li>
                                        <% } %>
                                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./block/footer.ejs') %>
        <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>
            <%- include('./block/script2.ejs') %>
</body>

</html>